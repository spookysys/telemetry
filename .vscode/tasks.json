{
    "version": "0.1.0",
    "showOutput": "always",
    "windows": {
        "command": "cmd",
        "args": [ "/C" ]
    },
    "linux": {
        "command": "sh",
        "args": [ "-c" ]
    },
    "echoCommand": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "Debug",
            "args": [
                "dbg_docker\\run_dbg.bat"
            ]
        },
        {
            "taskName": "Build",
            "args": [
                "dbg_docker\\build.bat"
            ]
        },
        {
            "taskName": "Compose Up",
            "args": [
                "docker-compose -f dbg_docker/docker-compose.debug.yml up"
            ]
        },
        {
            "taskName": "Compose Down",
            "args": [
                "docker-compose -f dbg_docker/docker-compose.debug.yml down"
            ]
        }

    ]
}