{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run locally",
            "type": "node2",
            "request": "launch",
            "program": "${workspaceRoot}/app/app.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Run",
            "type": "node2",
            "request": "attach",
            //"preLaunchTask": "compose up detached",
            "localRoot": "${workspaceRoot}/app",
            "remoteRoot": "/usr/src/app",
            "port": 13610
        },
        {
            "name": "Attach",
            "type": "node2",
            "request": "attach",
            "localRoot": "${workspaceRoot}/app",
            "remoteRoot": "/usr/src/app",
            "port": 13610,
            "restart": true
        }
    ]
}