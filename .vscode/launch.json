{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/app.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            //"preLaunchTask": "Compose Up",
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/usr/src/app",
            "port": 5858,
            "restart": false,
            "address": "127.0.0.1"
        }
    ]
}