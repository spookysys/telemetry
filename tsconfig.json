{
	"files": [
		"source/**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"rootDir": "source",
		"outDir": "build"
	}
}